# Sign in with Ethos - Environment Variables
# Copy this file to .env.local and fill in the values

# ===========================================
# REQUIRED: JWT Configuration
# ===========================================
# Secret key for signing JWT tokens (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# ===========================================
# REQUIRED: App Configuration
# ===========================================
# Your application's base URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# OPTIONAL: Storage Configuration
# ===========================================
# Storage adapter for nonces and session data
# Options: memory, redis, upstash (default: memory)
STORAGE_ADAPTER=memory

# Redis configuration (if STORAGE_ADAPTER=redis)
REDIS_URL=redis://localhost:6379

# Upstash Redis configuration (if STORAGE_ADAPTER=upstash)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ===========================================
# OPTIONAL: Discord OAuth
# ===========================================
# Get credentials at: https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback

# ===========================================
# OPTIONAL: Twitter/X OAuth
# ===========================================
# Get credentials at: https://developer.twitter.com/en/portal/projects-and-apps
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:3000/auth/twitter/callback

# ===========================================
# OPTIONAL: Telegram Login Widget
# ===========================================
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=

# ===========================================
# OPTIONAL: Farcaster Configuration
# ===========================================
# Farcaster authentication is QR-code based and doesn't require API keys
# However, you can customize the polling behavior
FARCASTER_POLL_INTERVAL=2000
FARCASTER_POLL_TIMEOUT=300000

# ===========================================
# OPTIONAL: Ethos API Configuration
# ===========================================
# Ethos API base URL (default: https://api.ethos.network)
ETHOS_API_URL=https://api.ethos.network

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Enable debug logging
DEBUG=false
