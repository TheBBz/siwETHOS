# ===========================================
# Sign in with Ethos - Environment Variables
# ===========================================

# Server URL (your deployed domain)
AUTH_SERVER_URL=https://ethos.thebbz.xyz

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Storage Adapter: "upstash" | "redis" | "memory"
STORAGE_ADAPTER=memory

# Upstash Redis (for serverless deployment)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Redis (for Docker/self-hosted deployment)
REDIS_URL=redis://localhost:6379

# Ethos API Configuration
ETHOS_API_URL=https://api.ethos.network
ETHOS_CLIENT_NAME=signinwithethos@0.1.0

# Cache TTL in seconds (default: 600 = 10 minutes)
ETHOS_CACHE_TTL=600

# ===========================================
# SIWE Configuration (optional)
# ===========================================

# Chain ID for signature verification (default: 1 = Ethereum mainnet)
SIWE_CHAIN_ID=1

# Message expiration time in minutes (default: 5)
SIWE_EXPIRATION_MINUTES=5
