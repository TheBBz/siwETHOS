{
    "name": "@thebbz/siwe-ethos-server",
    "version": "1.0.0",
    "type": "module",
    "description": "Server middleware for Sign in with Ethos authentication - Express & Next.js support",
    "license": "MIT",
    "author": "thebbz",
    "homepage": "https://github.com/thebbz/siwETHOS#readme",
    "bugs": {
        "url": "https://github.com/thebbz/siwETHOS/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/thebbz/siwETHOS",
        "directory": "packages/server"
    },
    "keywords": [
        "ethos",
        "siwe",
        "sign-in-with-ethereum",
        "authentication",
        "middleware",
        "express",
        "nextjs",
        "server"
    ],
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./express": {
            "types": "./dist/express.d.ts",
            "import": "./dist/express.js",
            "require": "./dist/express.cjs"
        },
        "./nextjs": {
            "types": "./dist/nextjs.d.ts",
            "import": "./dist/nextjs.js",
            "require": "./dist/nextjs.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "clean": "rm -rf dist",
        "lint": "eslint src/",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "prepublishOnly": "pnpm run test && pnpm run build"
    },
    "dependencies": {
        "@thebbz/siwe-ethos-providers": "^1.3.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.6",
        "@vitest/coverage-v8": "^1.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "peerDependencies": {
        "express": ">=4.0.0",
        "next": ">=13.0.0"
    },
    "peerDependenciesMeta": {
        "express": {
            "optional": true
        },
        "next": {
            "optional": true
        }
    }
}